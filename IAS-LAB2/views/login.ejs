<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Secure Auth</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container">
        <h1>Login</h1>
        
        <!-- Initial login form -->
        <form id="loginForm" class="auth-form">
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" required>
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" id="password" name="password" required>
            </div>
            <button type="submit" class="btn">Login</button>
        </form>
        
        <!-- OTP verification form (initially hidden) -->
        <form id="otpForm" class="auth-form" style="display: none;">
            <div class="form-group">
                <label for="otp">Enter OTP sent to your email:</label>
                <input type="text" id="otp" name="otp" required>
            </div>
            <div class="form-actions">
                <button type="submit" class="btn">Verify OTP</button>
                <button type="button" id="resendOTP" class="btn-secondary">Resend OTP</button>
            </div>
            <div id="otpTimer" class="timer-text"></div>
        </form>

        <div class="auth-links">
            <a href="/auth/register">Don't have an account? Register</a>
        </div>
    </div>

    <script src="/js/login.js"></script>
</body>
</html> 